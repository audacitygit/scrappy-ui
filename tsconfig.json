{
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": false,
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src"
  ]
}